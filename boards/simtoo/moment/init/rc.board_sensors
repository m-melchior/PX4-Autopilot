#!/bin/sh
#
# boar specific sensors init
#------------------------------------------------------------------------------

# Baro
// -s SPI internal
fbm -s start

# Compass
// -I I2C internal
// -R rotation none
// -T => cli.custom1=1 => enable_temp_compensation
hmc5883 -T -I -R 0 start

# IMU
// -s SPI internal
// -R rotation none
mpu6500 -s -R 0 start

# Smart Battery
// -I I2C internal
// -a chip ID of the battery
simtoo_xt200 -I -a 0x0B start

