#!/bin/sh
#
# boar specific sensors init
#------------------------------------------------------------------------------

# IMU
// -s SPI internal
// -R rotation none
mpu6500 -s -R 0 start

# Compass
// -I I2C internal
// -R rotation none
// -T => cli.custom1=1 => enable_temp_compensation
hmc5883 -T -I -R 0 start

# Baro not known, yet
#bmp280 -s start

# Smart Battery
simtoo_xt200 -I -a 0x0B start

